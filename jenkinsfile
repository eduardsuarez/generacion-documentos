pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'generador-documentos'
        DOCKER_TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                // Obtener código de GitHub
                git branch: 'main',
                    url: 'https://github.com/eduardsuarez/generacion-documentos.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Construir imagen Docker
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        /**
        stage('Quality Check') {
            steps {
                script {
                    docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").inside {
                        // Análisis estático
                        sh 'flake8 src/'
                        sh 'black --check src/'
                        sh 'mypy src/'
                    }
                }
            }
        }
        **/
        stage('Deploy') {
            steps {
                script {
                    // Usar docker.image().inside() para ejecutar el contenedor
                    docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").inside("-d -p 4449:4449 -v ${WORKSPACE}/tmp:/generacion-documentos/tmp") {
                        // Aquí puedes ejecutar comandos dentro del contenedor
                        echo 'Contenedor ejecutado con éxito.'
                    }
                }
            }
        }
    }

    post {
        always {
            // Limpiar workspace
            cleanWs()
        }
        success {
            echo 'Pipeline ejecutado exitosamente!'
        }
        failure {
            echo 'Pipeline falló'
        }
    }
}
